@page "/student"
@inject NavigationManager navigation
@layout Components.Layout.LeaveLayout

@rendermode InteractiveServer

<PageTitle>Меню ученика</PageTitle>
<div>
</div>
<div>
	<div class="container h-100 py-5">
		<div class="row h-100 justify-content-center align-items-center">
			<div class="col-6 w-50 h-50">
				<div class="position-relative">
					<div class="position-absolute top-50 start-50 translate-middle my-4">
						<button type="button" class="btn btn-outline-info" @onclick="RedirectToGrades">Просмотр оценок</button>
						<button type="button" class="btn btn-outline-info" @onclick="RedirectToSchedule">Расписание</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@code {
	private void RedirectToGrades()
	{
		navigation.NavigateTo("/student/grades");
	}
	private void RedirectToSchedule()
	{
		navigation.NavigateTo("/student/schedule");
	}
}
